{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Devices API (Debug with Docker Postgres)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/Devices.Api/bin/Debug/net9.0/Devices.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Devices.Api",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "DOTNET_USE_POLLING_FILE_WATCHER": "true",
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    }
  ]
}
